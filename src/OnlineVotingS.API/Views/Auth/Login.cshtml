@model OnlineVotingS.API.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/login.css">
    <meta http-equiv="Cache-Control" content="no-store, no-cache, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <style>
        .text-danger {
            color: #dc3545;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <form asp-action="Login" asp-controller="Auth" method="post">
            @Html.AntiForgeryToken()
            <h2>Login</h2>

            <div class="input-field">
                <input asp-for="UserName" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="Password" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="forget">
                <a asp-action="ForgotPassword" asp-controller="Auth">Forgot password?</a>
            </div>

            <button type="submit">Log In</button>

            <div class="register">
                <p>Don't have an account? <a asp-action="Register" asp-controller="Auth">Register</a></p>
            </div>
        </form>
    </div>

    <!-- Ensure client-side validation is included -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.6/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
