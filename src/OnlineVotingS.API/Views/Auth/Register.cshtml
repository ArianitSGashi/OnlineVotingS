@model OnlineVotingS.API.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/css/register.css">
    <style>
        .text-danger {
            color: #dc3545;
            font-size: 14px;
        }

    </style>
</head>
<body>
    <div class="wrapper">
        <form asp-action="Register" asp-controller="Auth" method="post">
            @Html.AntiForgeryToken()
            <h2>Register</h2>

            <div class="input-field">
                <input asp-for="Id" placeholder="Personal Number" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="UserName" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="Email" type="email" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="Name" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="FathersName" placeholder="Father's Name" />
                <span asp-validation-for="FathersName" class="text-danger"></span>
            </div>

            <div class="input-field">
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<OnlineVotingS.Domain.Enums.Gender>()">
                    <option value="">Select Gender</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="DateOfBirth" type="date" placeholder="Date of Birth" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="Address" placeholder="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="MobileNumber" placeholder="Mobile Number" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="Password" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit">Register</button>

            <div class="register">
                <p>Already have an account? <a asp-action="Login" asp-controller="Auth">Login</a></p>
            </div>
        </form>
    </div>
</body>
</html>
