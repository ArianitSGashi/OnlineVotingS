@model OnlineVotingS.API.Models.ChangePasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link rel="stylesheet" href="/css/change-password.css">
</head>
<body>
    <div class="wrapper">
        @using (Html.BeginForm("ChangePassword", "Voter", FormMethod.Post))
        {
            <h2>Change Your Password</h2>
            <div class="input-field">
                @Html.PasswordFor(model => model.OldPassword, new { @class = "input", placeholder = "Enter your old password" })
            </div>
            <div class="input-field">
                @Html.PasswordFor(model => model.NewPassword, new { @class = "input", placeholder = "Enter your new password" })
            </div>
            <div class="input-field">
                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "input", placeholder = "Confirm your new password" })
            </div>
            <button type="submit">Change Password</button>
        }
    </div>
</body>
</html>