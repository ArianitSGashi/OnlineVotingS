@model IEnumerable<OnlineVotingS.API.Models.VoterViewModels.CandidateViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Candidate Page</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/guest-election.css" rel="stylesheet">    
    <style>
        .pagination {
            display: flex;
            align-items: center; /* Align items (buttons and text) horizontally in the center */
            justify-content: center; /* Center the whole pagination section */
            padding: 10px 0;
        }

            .pagination button {
                margin: 0 10px;
                padding: 8px 12px;
                border: none;
                background-color: #007bff;
                color: white;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .pagination button:disabled {
                    background-color: #6c757d;
                    cursor: not-allowed;
                }

                .pagination button:hover:not(:disabled) {
                    background-color: #0056b3;
                }

            .pagination #currentPage {
                font-size: 16px;
                font-weight: bold;
                margin: 0 10px; /* Add spacing between the page number and buttons */
                color: #333;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="@Url.Action("VoterDashboard", "Voter")">
            <i class="fas fa-vote-yea"></i> Online Voting System
        </a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("VoterDashboard", "Voter")"><i class="fas fa-home"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("CandidatePage", "Voter")"><i class="fas fa-users"></i> Candidates</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ElectionPage", "Voter")"><i class="fas fa-poll"></i> Elections</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ComplainPage", "Voter")"><i class="fas fa-comment-alt"></i> Complain</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("RepliedComplaintsPage", "Voter")"><i class="fas fa-reply"></i> Replied Complaints</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ShowResults", "Voter")"><i class="fas fa-list-alt"></i> View Results</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user"></i> Account
                    </a>
                    <div class="dropdown-menu" aria-labelledby="profileDropdown">
                        <a class="dropdown-item" href="@Url.Action("ProfilePage", "Voter")"><i class="fas fa-user"></i> Profile</a>
                        <a class="dropdown-item" href="@Url.Action("FeedbackPage", "Voter")"><i class="fas fa-comment-dots"></i> Feedback</a>
                    </div>
                </li>
            </ul>
            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-light">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>
    </nav>

    <!-- Candidate Table Section -->
    <div class="hero-section text-center">
        <div class="container">
            <h1 class="display-4">Candidates</h1>
            <input type="text" id="candidateSearch" placeholder="Search by Candidate ID, Full Name, or Party" class="form-control">
            <button id="searchButton" class="btn btn-primary" type="button">
                <i class="fas fa-search"></i> Search
            </button>

            <div class="table-responsive mt-4" style="overflow-x: auto !important;">
    <table class="table table-hover" id="candidateTable">
        <thead class="thead-dark">
            <tr>
                <th>Candidate ID</th>
                <th>Election ID</th>
                <th>Full Name</th>
                <th>Party</th>
                <th>Description</th>
                <th>Income</th>
                <th>Works</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidate in Model)
            {
                <tr class="candidate-row">
                    <td>@candidate.CandidateID</td>
                    <td>@candidate.ElectionID</td>
                    <td>@candidate.FullName</td>
                    <td>@candidate.Party</td>
                    <td>@candidate.Description</td>
                    <td>@candidate.Income</td>
                    <td>@candidate.Works</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Pagination aligned to the right -->
            <td colspan="7">
                <div class="pagination d-inline-block float-right">
                    <button id="prevPage" class="btn btn-secondary" disabled>Previous</button>
                    <span id="currentPage">Page 1</span>
                    <button id="nextPage" class="btn btn-secondary">Next</button>
                </div>
            </td>
</div>
</div>


    <!-- Footer -->
    <footer class="text-lg-start text-grey" style="background-color: #0c0e1c;">
        <div class="container p-4 pb-0">
            <section class="">
                <div class="row">
                    <!-- About Us Section -->
                    <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">About Us</h6>
                        <p>
                            We are dedicated to providing a secure and transparent online voting platform for all citizens.
                        </p>
                    </div>

                    <!-- Quick Links Section -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">Quick Links</h6>
                        <p><a href="/" class="text-white">Home</a></p>
                        <p><a href="#" class="text-white">About Us</a></p>
                        <p><a href="#" class="text-white">Services</a></p>
                        <p><a href="#" class="text-white">Terms of Service</a></p>
                    </div>

                    <!-- Contact Us Section -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">Contact Us</h6>
                        <p><i class="fas fa-envelope mr-3"></i> info@onlinevoting.com</p>
                        <p><i class="fas fa-phone mr-3"></i> +1 (123) 456-7890</p>
                    </div>

                    <!-- Social Media Section -->
                    <div class="col-md-3 col-lg-3 col-xl-2 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">Follow Us</h6>
                        <a class="btn btn-outline-light btn-floating m-1" role="button"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-floating m-1" role="button"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-outline-light btn-floating m-1" role="button"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </section>

            <hr style="background-color:white !important" class="my-3">

            <section class="p-3 pt-0">
                <div class="row d-flex align-items-center">
                    <div class="col-md-7 col-lg-8 text-md-start">
                        <div class="p-3">
                            &copy; 2024 Online Voting System. All rights reserved.
                        </div>
                    </div>
                    <div class="col-md-5 col-lg-4 ml-lg-0 text-center text-md-end">
                        <a class="text-white" href="#">Privacy Policy</a>
                    </div>
                </div>
            </section>
        </div>

    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- Pagination and Search Script -->
    <script>
        $(document).ready(function () {
            const rowsPerPage = 5; // Display 5 candidates per page
            let currentPage = 1;
            const $rows = $('#candidateTable tbody .candidate-row');
            const totalRows = $rows.length;
            const totalPages = Math.ceil(totalRows / rowsPerPage);

            function showPage(page) {
                $rows.hide();
                const start = (page - 1) * rowsPerPage;
                const end = start + rowsPerPage;
                $rows.slice(start, end).show();

                $('#currentPage').text('Page ' + page);

                $('#prevPage').prop('disabled', page === 1);
                $('#nextPage').prop('disabled', page === totalPages);
            }

            $('#prevPage').click(function () {
                if (currentPage > 1) {
                    currentPage--;
                    showPage(currentPage);
                }
            });

            $('#nextPage').click(function () {
                if (currentPage < totalPages) {
                    currentPage++;
                    showPage(currentPage);
                }
            });

            showPage(currentPage);  // Initialize the first page

            // Real-Time Search Functionality
            $("#candidateSearch").on("input", function () {
                const value = $(this).val().toLowerCase();
                $rows.filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
</body>
</html>
