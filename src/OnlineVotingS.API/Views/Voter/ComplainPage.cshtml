@model OnlineVotingS.API.Models.VoterViewModels.ComplainViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Your Complain</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/voter-complain.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="@Url.Action("VoterDashboard", "Voter")">Online Voting System</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("VoterDashboard", "Voter")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("CandidatePage", "Voter")">Candidate</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ElectionPage", "Voter")">Election</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ComplainPage", "Voter")">Complain</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("RepliedComplaintsPage", "Voter")">Replied Complaints</a>
                </li>
            </ul>
            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger ml-2">Logout</button>
            </form>
            <div class="dropdown ml-3">
                <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user"></i> OVS
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Profile</a>
                    <a class="dropdown-item" href="#">Settings</a>
                    <a class="dropdown-item" href="#">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Complain Form Section -->
    <div class="hero-section text-center">
        <div class="container">
            <h1 class="display-4">Submit Your Complain</h1>
            <div class="form-container mt-4">
                <form method="post" action="@Url.Action("SubmitComplain", "Voter")">
                    <div class="form-group">
                        <label for="electionId">Election</label>
                        @Html.DropDownListFor(m => m.ElectionID, Model.Elections, "Select an election", new { @class = "form-control", required = true })
                        @Html.ValidationMessageFor(m => m.ElectionID, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="complaintText">Complain</label>
                        @Html.TextAreaFor(m => m.ComplaintText, new { @class = "form-control", placeholder = "Enter your complaint", required = true, rows = 5 })
                        @Html.ValidationMessageFor(m => m.ComplaintText, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Submit Complain</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <h5>Useful Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/">Home</a></li>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Services</a></li>
                        <li><a href="#">Terms of Service</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-lg-6 col-md-6">
                    <h5>Contact Us</h5>
                    <p>Email: info@example.com</p>
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-instagram"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-google"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>