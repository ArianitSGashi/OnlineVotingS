@model OnlineVotingS.API.Models.VoterViewModels.ComplainViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Your Complain</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/css/voter-complain.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="@Url.Action("VoterDashboard", "Voter")">
            <i class="fas fa-vote-yea"></i> Online Voting System
        </a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("VoterDashboard", "Voter")"><i class="fas fa-home"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("CandidatePage", "Voter")"><i class="fas fa-users"></i> Candidates</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ElectionPage", "Voter")"><i class="fas fa-poll"></i> Elections</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ComplainPage", "Voter")"><i class="fas fa-comment-alt"></i> Complain</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("RepliedComplaintsPage", "Voter")"><i class="fas fa-reply"></i> Replied Complaints</a>
                </li>
            </ul>
            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex">
                <button type="submit" class="btn btn-outline-light">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>
    </nav>

    <!-- Complain Form Section -->
    <div class="hero-section text-center">
        <div class="container">
            <h1 class="display-4">Submit Your Complain</h1>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <div class="form-container mt-4">
                <form method="post" asp-action="SubmitComplain" asp-controller="Voter" id="complainForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="ElectionID">Election</label>
                        <select asp-for="ElectionID" asp-items="Model.Elections" class="form-control">
                            <option value="">Select an election</option>
                        </select>
                        <span asp-validation-for="ElectionID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ComplaintText">Complaint</label>
                        <textarea asp-for="ComplaintText" class="form-control" rows="5" placeholder="Enter your complaint"></textarea>
                        <span asp-validation-for="ComplaintText" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Submit Complain</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>About Us</h5>
                    <p>We are dedicated to providing a secure and transparent online voting platform for all citizens.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/"><i class="fas fa-home"></i> Home</a></li>
                        <li><a href="#"><i class="fas fa-info-circle"></i> About Us</a></li>
                        <li><a href="#"><i class="fas fa-cogs"></i> Services</a></li>
                        <li><a href="#"><i class="fas fa-file-contract"></i> Terms of Service</a></li>
                        <li><a href="#"><i class="fas fa-user-secret"></i> Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contact Us</h5>
                    <p><i class="fas fa-envelope"></i> Email: info@onlinevoting.com</p>
                    <p><i class="fas fa-phone"></i> Phone: +1 (123) 456-7890</p>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>&copy; 2024 Online Voting System. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#complainForm").validate({
                rules: {
                    ElectionID: {
                        required: true
                    },
                    ComplaintText: {
                        required: true,
                        maxlength: 200
                    }
                },
                messages: {
                    ElectionID: {
                        required: "Please select an election."
                    },
                    ComplaintText: {
                        required: "Please enter your complaint.",
                        maxlength: "The complaint must be at most 200 characters long."
                    }
                },
                errorElement: "span",
                errorClass: "text-danger"
            });
        });
    </script>
</body>
</html>