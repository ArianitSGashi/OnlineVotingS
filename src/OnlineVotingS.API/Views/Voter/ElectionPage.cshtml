@model IEnumerable<OnlineVotingS.API.Models.VoterViewModels.ElectionsViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Election Page</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/voter-election.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="@Url.Action("VoterDashboard", "Voter")">Online Voting System</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("VoterDashboard", "Voter")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("CandidatePage", "Voter")">Candidate</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ElectionPage", "Voter")">Election</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ComplainPage", "Voter")">Complain</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("RepliedComplaintsPage", "Voter")">Replied Complaints</a>
                </li>
            </ul>
            <button class="btn btn-danger ml-2">Logout</button>
            <div class="dropdown ml-3">
                <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user"></i> OVS
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Profile</a>
                    <a class="dropdown-item" href="#">Settings</a>
                    <a class="dropdown-item" href="#">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Election Table Section -->
    <div class="hero-section text-center">
        <div class="container">
            <h1 class="display-4">Elections</h1>
            <input type="text" id="electionSearch" placeholder="Search by Election ID, Title, or Description" class="form-control">
            <button id="searchButton" class="btn btn-primary mt-2">Search</button>

            <table class="table table-hover mt-4" id="electionTable">
                <thead class="thead-dark">
                    <tr>
                        <th>Election ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var election in Model)
                    {
                        var hasVoted = election.UserHasVoted; // Property indicating if the user has voted in this election
                        var isCompleted = election.IsCompleted; // Property indicating if the election is completed
                        <tr>
                            <td>@election.ElectionID</td>
                            <td>@election.Title</td>
                            <td>@election.Description</td>
                            <td>@election.StartDate.ToString("g")</td>
                            <td>@election.EndDate.ToString("g")</td>
                            <td>
                                @if (isCompleted)
                                {
                                    <button class="btn btn-danger" disabled>Completed</button>
                                }
                                else if (hasVoted)
                                {
                                    <button class="btn btn-secondary" disabled>Voted</button>
                                }
                                else
                                {
                                    <a href="@Url.Action("VotePage", "Voter", new { electionId = election.ElectionID })" class="btn btn-primary">Vote</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <h5>Useful Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/">Home</a></li>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Services</a></li>
                        <li><a href="#">Terms of Service</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-lg-6 col-md-6">
                    <h5>Contact Us</h5>
                    <p>Email: info@example.com</p>
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-instagram"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-google"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- Search Script -->
    <script>
        $(document).ready(function () {
            $("#searchButton").on("click", function () {
                var value = $("#electionSearch").val().toLowerCase();
                $("#electionTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#electionSearch").on("keyup", function (event) {
                if (event.keyCode === 13) { // 13 is the Enter key
                    $("#searchButton").click();
                }
            });
        });
    </script>
</body>
</html>
