@model IEnumerable<OnlineVotingS.API.Models.ComplaintViewModels.ComplaintViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Complaints</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> <!-- Link to Bootstrap CSS -->
    <link href="~/css/new-sidebar.css" rel="stylesheet"> <!-- Link to the new Sidebar CSS file -->
    <link href="~/css/view-complain.css" rel="stylesheet"> <!-- Link to the new ViewComplain CSS file -->
</head>
<body>
    <!-- Sidebar Menu -->
    @Html.Partial("_NewSidebar")

    <div class="container-with-sidebar">
        <!-- Breadcrumb Navigation -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Complain</li>
            </ol>
        </nav>

        <div class="input-group mb-4">
            <input type="text" id="complainSearch" class="form-control" placeholder="Search by Complaint ID, User ID, or Election Title">
            <button class="btn btn-primary" type="button" id="searchButton">Search</button>
        </div>

        <div class="table-responsive">
            <h4 class="mb-4">Complain</h4>
            <table class="table table-striped table-bordered" id="complainTable">
                <thead class="table-dark">
                    <tr>
                        <th>Complaint ID</th>
                        <th>User ID</th>
                        <th>Election ID</th>
                        <th>Election Title</th>
                        <th>Complaint Text</th>
                        <th>Complaint Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var complaint in Model)
                    {
                        <tr>
                            <td>@complaint.ComplaintID</td>
                            <td>@complaint.UserID</td>
                            <td>@complaint.ElectionID</td>
                            <td>@complaint.ElectionTitle</td>
                            <td>@complaint.ComplaintText</td>
                            <td>@complaint.ComplaintDate.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchButton").on("click", function () {
                var value = $("#complainSearch").val().toLowerCase();
                $("#complainTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#complainSearch").on("keyup", function (event) {
                if (event.keyCode === 13) { // 13 is the Enter key
                    $("#searchButton").click();
                }
            });
        });
    </script>
</body>
</html>
