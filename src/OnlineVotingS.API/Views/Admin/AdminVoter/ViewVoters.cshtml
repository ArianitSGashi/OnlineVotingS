@model IEnumerable<OnlineVotingS.API.Models.AdminViewModels.AdminVoterViewModels.ViewVoterViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Voters</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap CSS -->
    <link href="~/css/new-sidebar.css" rel="stylesheet"> <!-- Link to the sidebar CSS file -->
    <link href="~/css/view-voters.css" rel="stylesheet"> <!-- Link to the new CSS file -->
</head>
<body>
    <!-- Sidebar Menu -->
    @await Html.PartialAsync("_NewSidebar")

    <div class="container-with-sidebar bg-light p-4 rounded">
        <h4 class="mb-4">Voters</h4>

        <!-- Search bar -->
        <div class="input-group mb-4">
            <input type="text" class="form-control" id="searchVoter" placeholder="Search by ID, Name, or Mobile Number">
            <div class="input-group-append">
                <button class="btn btn-primary" type="button">Search</button>
            </div>
        </div>

        <!-- Voters table -->
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Father's Name</th>
                    <th>Gender</th>
                    <th>Date of Birth</th>
                    <th>Address</th>
                    <th>Mobile Number</th>
                </tr>
            </thead>
            <tbody id="voterTableBody">
                @foreach (var voter in Model)
                {
                    <tr>
                        <td>@voter.Id</td>
                        <td>@voter.Name</td>
                        <td>@voter.FathersName</td>
                        <td>@voter.Gender.ToString()</td>
                        <td>@voter.DateOfBirth.ToString("yyyy-MM-dd")</td>
                        <td>@voter.Address</td>
                        <td>@voter.MobileNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script>
        // jQuery for the search functionality
        $(document).ready(function () {
            $('#searchVoter').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('#voterTableBody tr').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</body>
</html>

