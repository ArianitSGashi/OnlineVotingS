@model OnlineVotingS.API.Models.ElectionViewModels.ModifyElectionViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modify Election</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/new-sidebar.css" rel="stylesheet">
    <link href="~/css/Election/generateelection.css" rel="stylesheet">
</head>
<body>
    <!-- Sidebar Menu -->
    @Html.Partial("_NewSidebar")
    <div class="container-with-sidebar bg-light p-4 rounded">
        <h4 class="mb-4">Modify Election</h4>
        <form method="post" action="/AdminElection/AddElection" class="form-container">
            <div class="mb-3">
                <label for="ElectionID" class="form-label">Election ID</label>
                @Html.TextBoxFor(m => m.ElectionID, new { @class = "form-control", required = true })
                @Html.ValidationMessageFor(m => m.ElectionID, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Election Title</label>
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = true })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Election Description</label>
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", required = true })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="startDate" class="form-label">Start Date</label>
                @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = true })
                @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="endDate" class="form-label">End Date</label>
                @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = true })
                @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Generate Election</button>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
