@model OnlineVotingS.API.Models.AdminViewModels.ElectionViewModels.DeleteElectionViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Election</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/new-sidebar.css" rel="stylesheet">
    <link href="~/css/Election/completeelection.css" rel="stylesheet">
</head>
<body>
    <!-- Sidebar Menu -->
    @await Html.PartialAsync("_NewSidebar")
    <div class="container-with-sidebar bg-light p-4 rounded">
        <h4 class="mb-4">Delete Election</h4>
        <form method="post" action="/Election/DeleteElection" class="form-container">
            <div class="mb-3">
                <label for="SelectedElectionID" class="form-label">Select Election to Delete</label>
                @Html.DropDownListFor(m => m.SelectedElectionID, Model.AvailableElections, "Select an Election", new { @class = "form-control dropdown-small", required = true })
                @Html.ValidationMessageFor(m => m.SelectedElectionID, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-danger">Delete Election</button>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>