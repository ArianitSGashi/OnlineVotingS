@model OnlineVotingS.API.Models.CompleteElectionViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complete Election</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="wwwroot/css/completeelection.css">
    <link rel="stylesheet" href="~/css/voter.css">

</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                DIGITAL VOT<span style="color:green;">ING</span>
            </a>
            <div class="d-flex align-items-center">
                <span class="text-white me-3">MIKASA</span>
                <img src="https://via.placeholder.com/30" alt="Profile Image" class="rounded-circle">
            </div>
        </div>
    </nav>

    <!-- Sidebar Menu -->
    @Html.Partial("_Sidebar")

    <div class="container">
        <div class="card mt-5">
            <div class="card-header">
                <h3>Complete Election</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("CompleteElection", "Election", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.SelectedElectionID, "Select Election to Complete:")
                        @Html.DropDownListFor(model => model.SelectedElectionID, Model.OngoingElections, "Select an election", new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary">Complete Election</button>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/completeelection.js"></script>
</body>
</html>
