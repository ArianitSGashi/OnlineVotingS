@model OnlineVotingS.API.Models.AdminViewModels.ElectionViewModels.CompleteElectionViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complete Election</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/new-sidebar.css" rel="stylesheet">
    <link href="~/css/Election/completeelection.css" rel="stylesheet">
</head>
<body>
    @await Html.PartialAsync("_NewSidebar")
    <div class="text-center label-container">
        <h4 class="election-header">Complete Election</h4>
        @using (Html.BeginForm("CompleteElection", "Election", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mb-3">
                <label asp-for="SelectedTitle" class="form-label">Election Title</label>
                <select asp-for="SelectedTitle" asp-items="Model.OngoingElections" class="form-control dropdown-small">
                    <option value="">Select an election</option>
                </select>
                <span asp-validation-for="SelectedTitle" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Complete Election</button>
        }
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>