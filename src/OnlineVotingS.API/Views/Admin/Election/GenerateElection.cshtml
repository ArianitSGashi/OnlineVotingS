@model OnlineVotingS.API.Models.ElectionViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generate Election</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/generateelection.css">
    <link href="~/css/new-sidebar.css" rel="stylesheet"> <!-- Link to the sidebar CSS file -->
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                DIGITAL VOT<span style="color:green;">ING</span>
            </a>
            <div class="d-flex align-items-center">
                <span class="text-white me-3">MIKASA</span>
                <img src="https://via.placeholder.com/30" alt="Profile Image" class="rounded-circle">
            </div>
        </div>
    </nav>

    <!-- Sidebar Menu -->
    @Html.Partial("_NewSidebar")

    <div class="form-container">
        <h4>Generate Election</h4>
        @using (Html.BeginForm("GenerateElection", "Election", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Title, "Election Title:")
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Enter Title" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, "Election Description:")
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Enter Description" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.StartDate, "Start Date:")
                @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EndDate, "End Date:")
                @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
            </div>
            <button type="submit" class="btn btn-primary">Generate Election</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
