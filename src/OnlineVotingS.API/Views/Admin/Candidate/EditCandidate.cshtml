@model OnlineVotingS.API.Models.AdminViewModels.CandidateViewModels.EditCandidateViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Candidate</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/new-sidebar.css" rel="stylesheet">
    <link href="~/css/Election/generateelection.css" rel="stylesheet">
</head>
<body>
    @await Html.PartialAsync("_NewSidebar")
    <div class="container-with-sidebar bg-light p-4 rounded">
        <h4 class="mb-4">Edit Candidate</h4>
        <form method="post" action="/Candidate/EditCandidate" class="form-container">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3">
                <label asp-for="CandidateID" class="form-label">Select Candidate</label>
                <select asp-for="CandidateID" asp-items="Model.CandidateList" class="form-control select-dropdown" id="candidateId" required>
                    <option value="">Select a Candidate</option>
                </select>
                <span asp-validation-for="CandidateID" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ElectionID" class="form-label">Election ID</label>
                <input asp-for="ElectionID" class="form-control" id="electionId" readonly />
                <span asp-validation-for="ElectionID" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" id="fullName" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Party" class="form-label">Party</label>
                <input asp-for="Party" class="form-control" id="party" required />
                <span asp-validation-for="Party" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" id="description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Income" class="form-label">Income</label>
                <input asp-for="Income" class="form-control" id="income" type="number" step="0.01" required />
                <span asp-validation-for="Income" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Works" class="form-label">Works</label>
                <input asp-for="Works" class="form-control" id="works" required />
                <span asp-validation-for="Works" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update Candidate</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#candidateId').change(function () {
                var selectedId = $(this).val();
                if (selectedId) {
                    $.ajax({
                        url: '/Candidate/GetCandidateDetails',
                        type: 'GET',
                        data: { id: selectedId },
                        success: function (data) {
                            $('#electionId').val(data.electionId);
                            $('#fullName').val(data.fullName);
                            $('#party').val(data.party);
                            $('#description').val(data.description);
                            $('#income').val(data.income);
                            $('#works').val(data.works);
                        },
                        error: function () {
                            alert('Error fetching candidate details');
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>