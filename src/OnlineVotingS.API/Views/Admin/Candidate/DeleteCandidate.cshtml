@model OnlineVotingS.API.Models.AdminCandidateViewModels.DeleteCandidateViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Candidate</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap CSS -->
    <link href="~/css/new-sidebar.css" rel="stylesheet"> <!-- Link to the sidebar CSS file -->
    <link href="~/css/delete-candidate.css" rel="stylesheet"> <!-- Link to the new CSS file -->
</head>
<body>
    <!-- Sidebar Menu -->
    @Html.Partial("_NewSidebar")

    <div class="container-with-sidebar bg-light p-4 rounded">
        <h4 class="mb-4">Delete Candidate</h4>
        <form method="post" action="/AdminCandidate/DeleteCandidate" class="form-container">
            <div class="mb-3">
                <label for="candidateId" class="form-label">Candidate ID</label>
                @Html.TextBoxFor(m => m.CandidateID, new { @class = "form-control", required = true })
                @Html.ValidationMessageFor(m => m.CandidateID, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-danger">Delete Candidate</button>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
