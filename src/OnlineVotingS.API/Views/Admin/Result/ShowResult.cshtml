@model OnlineVotingS.API.Models.ShowResultViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Result</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/showresult.css">
    <link rel="stylesheet" href="~/css/voter.css">

</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                DIGITAL VOT<span style="color:green;">ING</span>
            </a>
            <div class="d-flex align-items-center">
                <span class="text-white me-3">MIKASA</span>
                <img src="https://via.placeholder.com/30" alt="Profile Image" class="rounded-circle">
            </div>
        </div>
    </nav>

    <!-- Sidebar Menu -->
    @await Html.PartialAsync("_Sidebar")

    <div class="form-container">
        <h4>Show Result</h4>
        @using (Html.BeginForm("ShowResult", "Result", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.ElectionID)
                @Html.DropDownListFor(model => model.ElectionID, (SelectList)ViewBag.ElectionList, "Select Election", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CandidateID)
                @Html.DropDownListFor(model => model.CandidateID, (SelectList)ViewBag.CandidateList, "Select Candidate", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TotalVotes)
                @Html.TextBoxFor(model => model.TotalVotes, new { @class = "form-control", placeholder = "Enter Total Votes" })
            </div>
            <button type="submit" class="btn btn-primary">View Result</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/showresult.js"></script>
</body>
</html>
