@model IEnumerable<OnlineVotingS.API.Models.GuestViewModels.CandidateViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Candidate Page</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/guest-election.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="@Url.Action("GuestDashboard", "Guest")">
            <i class="fas fa-vote-yea"></i> Online Voting System
        </a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("GuestDashboard", "Guest")"><i class="fas fa-home"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ElectionPage", "Guest")"><i class="fas fa-poll"></i> Elections</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("CandidatePage", "Guest")"><i class="fas fa-users"></i> Candidates</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-info-circle"></i> About Us</a>
                </li>
            </ul>
            <button class="btn btn-primary ml-2" onclick="location.href='@Url.Action("Login", "Auth")'">Login</button>
        </div>
    </nav>

    <!-- Candidate Table Section -->
    <div class="hero-section text-center" style="height: auto !important;">
        <div class="container">
            <h1 class="display-4">Candidates</h1>
            <input type="text" id="candidateSearch" placeholder="Search by Candidate ID, Full Name, or Party" class="form-control">
            <button id="searchButton" class="btn btn-primary" type="button">
                <i class="fas fa-search"></i> Search
            </button>

            <div class="table-responsive mt-4" style="overflow-x: auto !important;">
                <table class="table table-hover" id="candidateTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>Candidate ID</th>
                            <th>Election ID</th>
                            <th>Full Name</th>
                            <th>Party</th>
                            <th>Description</th>
                            <th>Income</th>
                            <th>Works</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var candidate in Model)
                        {
                            <tr>
                                <td>@candidate.CandidateID</td>
                                <td>@candidate.ElectionID</td>
                                <td>@candidate.FullName</td>
                                <td>@candidate.Party</td>
                                <td>@candidate.Description</td>
                                <td>@candidate.Income</td>
                                <td>@candidate.Works</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start text-grey" style="background-color: #0c0e1c;">
        <div class="container p-4 pb-0">
            <section class="">
                <div class="row">
                    <!-- About Us Section -->
                    <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">About Us</h6>
                        <p>
                            We are dedicated to providing a secure and transparent online voting platform for all citizens.
                        </p>
                    </div>

                    <!-- Quick Links Section -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">Quick Links</h6>
                        <p><a href="/" class="text-white">Home</a></p>
                        <p><a href="#" class="text-white">About Us</a></p>
                        <p><a href="#" class="text-white">Services</a></p>
                        <p><a href="#" class="text-white">Terms of Service</a></p>
                    </div>

                    <!-- Contact Us Section -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">Contact Us</h6>
                        <p><i class="fas fa-envelope mr-3"></i> info@onlinevoting.com</p>
                        <p><i class="fas fa-phone mr-3"></i> +1 (123) 456-7890</p>
                    </div>

                    <!-- Social Media Section -->
                    <div class="col-md-3 col-lg-3 col-xl-2 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">Follow Us</h6>
                        <a class="btn btn-outline-light btn-floating m-1" role="button"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-floating m-1" role="button"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-outline-light btn-floating m-1" role="button"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </section>

            <hr class="my-3">

            <section class="p-3 pt-0">
                <div class="row d-flex align-items-center">
                    <div class="col-md-7 col-lg-8 text-center text-md-start">
                        <div class="p-3">
                            &copy; 2024 Online Voting System. All rights reserved.
                        </div>
                    </div>
                    <div class="col-md-5 col-lg-4 ml-lg-0 text-center text-md-end">
                        <a class="text-white" href="#">Privacy Policy</a>
                    </div>
                </div>
            </section>
        </div>

    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- Search Script -->
    <script>
        $(document).ready(function () {
            $("#searchButton").on("click", function () {
                var value = $("#electionSearch").val().toLowerCase();
                $("#electionTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $("#electionSearch").on("keyup", function (event) {
                if (event.keyCode === 13) { // 13 is the Enter key
                    $("#searchButton").click();
                }
            });
        });
    </script>
</body>
</html>
